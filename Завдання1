# === –†–æ–±–æ—Ç–∞ –∑—ñ —Å–ª–æ–≤–Ω–∏–∫–æ–º ===

def print_dict(data):
    """–í–∏–≤–æ–¥–∏—Ç—å —É—Å—ñ –∑–Ω–∞—á–µ–Ω–Ω—è —Å–ª–æ–≤–Ω–∏–∫–∞."""
    print("\n–í–º—ñ—Å—Ç —Å–ª–æ–≤–Ω–∏–∫–∞:")
    for key, value in data.items():
        print(f"{key}: {value}")

def add_record(data, key, value):
    """–î–æ–¥–∞—î –Ω–æ–≤–∏–π –∑–∞–ø–∏—Å –¥–æ —Å–ª–æ–≤–Ω–∏–∫–∞."""
    data[key] = value
    print(f"\n–î–æ–¥–∞–Ω–æ –∑–∞–ø–∏—Å: {key} ‚Üí {value}")

def delete_record(data, key):
    """–í–∏–¥–∞–ª—è—î –∑–∞–ø–∏—Å —ñ–∑ —Å–ª–æ–≤–Ω–∏–∫–∞."""
    if key in data:
        del data[key]
        print(f"\nüóë –í–∏–¥–∞–ª–µ–Ω–æ –∑–∞–ø–∏—Å: {key}")
    else:
        print(f"\n –ö–ª—é—á '{key}' –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ!")

def print_sorted(data):
    """–í–∏–≤–æ–¥–∏—Ç—å —Å–ª–æ–≤–Ω–∏–∫ –∑–∞ –≤—ñ–¥—Å–æ—Ä—Ç–æ–≤–∞–Ω–∏–º–∏ –∫–ª—é—á–∞–º–∏."""
    print("\n–°–ª–æ–≤–Ω–∏–∫ –∑–∞ –≤—ñ–¥—Å–æ—Ä—Ç–æ–≤–∞–Ω–∏–º–∏ –∫–ª—é—á–∞–º–∏:")
    for key in sorted(data.keys()):
        print(f"{key}: {data[key]}")

# === –ó–∞–≤–¥–∞–Ω–Ω—è –∑–∞ –≤–∞—Ä—ñ–∞–Ω—Ç–æ–º 18 ===

def analyze_employees():
    """–í–∏–∑–Ω–∞—á–∞—î –Ω–∞–π–±—ñ–ª—å—à—É –∑–∞—Ä–ø–ª–∞—Ç—É —Ç–∞ –Ω–∞–π–º–µ–Ω—à—ñ –∑–∞—Ä–ø–ª–∞—Ç–∏ –∑–∞ —Å—Ç–∞—Ç—Ç—é."""
    employees = {
        "–Ü–≤–∞–Ω–µ–Ω–∫–æ": {"salary": 12000, "gender": "—á"},
        "–ü–µ—Ç—Ä–µ–Ω–∫–æ": {"salary": 15000, "gender": "—á"},
        "–°–∏–¥–æ—Ä–µ–Ω–∫–æ": {"salary": 9800, "gender": "—á"},
        "–ö–æ–≤–∞–ª—å": {"salary": 11000, "gender": "–∂"},
        "–ú–µ–ª—å–Ω–∏–∫": {"salary": 17000, "gender": "–∂"},
        "–¢–∫–∞—á–µ–Ω–∫–æ": {"salary": 10200, "gender": "—á"},
        "–®–µ–≤—á–µ–Ω–∫–æ": {"salary": 9500, "gender": "–∂"},
        "–ë–æ–Ω–¥–∞—Ä": {"salary": 12500, "gender": "—á"},
        "–ì–Ω–∞—Ç—é–∫": {"salary": 10800, "gender": "–∂"},
        "–†–æ–º–∞–Ω–µ–Ω–∫–æ": {"salary": 14000, "gender": "–∂"}
    }

    # –í–∏–≤–µ—Å—Ç–∏ –ø–æ—á–∞—Ç–∫–æ–≤–∏–π —Å–ª–æ–≤–Ω–∏–∫
    print_dict(employees)

    # –∞) –ù–∞–π–±—ñ–ª—å—à–∞ –∑–∞—Ä–ø–ª–∞—Ç–∞
    max_emp = max(employees.items(), key=lambda x: x[1]["salary"])
    print(f"\n–∞) –ù–∞–π–≤–∏—â–∞ –∑–∞—Ä–ø–ª–∞—Ç–∞ —É: {max_emp[0]} ({max_emp[1]['salary']})")

    # –±) –ú—ñ–Ω—ñ–º–∞–ª—å–Ω–∞ –∑–∞—Ä–ø–ª–∞—Ç–∞ —Å–µ—Ä–µ–¥ —á–æ–ª–æ–≤—ñ–∫—ñ–≤ —ñ –∂—ñ–Ω–æ–∫
    men = {k: v for k, v in employees.items() if v["gender"] == "—á"}
    women = {k: v for k, v in employees.items() if v["gender"] == "–∂"}

    min_man = min(men.items(), key=lambda x: x[1]["salary"])
    min_woman = min(women.items(), key=lambda x: x[1]["salary"])

    print(f"–±) –ß–æ–ª–æ–≤—ñ–∫ –∑ –Ω–∞–π–º–µ–Ω—à–æ—é –∑–∞—Ä–ø–ª–∞—Ç–æ—é: {min_man[0]} ({min_man[1]['salary']})")
    print(f"–±) –ñ—ñ–Ω–∫–∞ –∑ –Ω–∞–π–º–µ–Ω—à–æ—é –∑–∞—Ä–ø–ª–∞—Ç–æ—é: {min_woman[0]} ({min_woman[1]['salary']})")

    # –ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ª–æ–≤–Ω–∏–∫ —É –≤—ñ–¥—Å–æ—Ä—Ç–æ–≤–∞–Ω–æ–º—É –≤–∏–≥–ª—è–¥—ñ
    print_sorted(employees)

# === –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü—ñ—è ===

if __name__ == "__main__":
    analyze_employees()

    # –ü—Ä–∏–∫–ª–∞–¥ –¥–æ–¥–∞–≤–∞–Ω–Ω—è / –≤–∏–¥–∞–ª–µ–Ω–Ω—è –∑–∞–ø–∏—Å—ñ–≤:
    employees_test = {"–ê–Ω–¥—Ä—É—Ö—ñ–≤": {"salary": 9000, "gender": "—á"}}
    add_record(employees_test, "–õ—ñ—Å–æ–≤–∞", {"salary": 13000, "gender": "–∂"})
    print_dict(employees_test)
    delete_record(employees_test, "–ê–Ω–¥—Ä—É—Ö—ñ–≤")
    print_sorted(employees_test)
